<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Title="更新程序" Height="200" Width="400">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="StatusText" Text="正在检查更新..." TextWrapping="WrapWithOverflow" Margin="0,0,0,10"
                       HorizontalAlignment="Center" />
            <ProgressBar x:Name="Progress" Height="20" Minimum="0" Maximum="100" />
        </StackPanel>
    </Grid>
</Window>